# Example of a database setup.
# You should change the relevant lines
# to match your system, then copy
# this file to database.yml
development:
  adapter: sqlite3
  database: db/privly_development.sqlite

# Warning: The database defined as "test" will be erased and
# re-generated from your development database when you run "rake".
# Do not set this db to the same as development or production.
test:
  adapter: sqlite3
  database: db/privly_test.sqlite

production:
  adapter: sqlite3
  database: db/privly_production.sqlite

